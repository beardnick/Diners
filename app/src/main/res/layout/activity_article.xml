<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.diners.ArticleActivity"
    android:background="@drawable/dinner">

    <com.gigamole.infinitecycleviewpager.HorizontalInfiniteCycleViewPager
        android:id="@+id/article_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:icvp_medium_scaled="true"
        app:icvp_center_page_scale_offset="0dp"
        app:icvp_max_page_scale="0.8"
        app:icvp_min_page_scale="0.6"
        app:icvp_min_page_scale_offset="0dp"
        app:icvp_interpolator="@android:anim/accelerate_decelerate_interpolator"
        app:icvp_scroll_duration="250"/>

</RelativeLayout>
