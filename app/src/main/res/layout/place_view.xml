<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/edge_margin"
    android:layout_marginEnd="@dimen/edge_margin"
    android:layout_marginBottom="@dimen/item_margin"
    android:layout_marginTop="@dimen/item_margin"
    style="@style/cardStyle">

    <TextView
        android:id="@+id/place_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_height"
        android:layout_marginStart="@dimen/text_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:text="name"
        android:textSize="@dimen/text_size"/>

    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_height"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/text_height"
        android:layout_toEndOf="@+id/place_name"
        android:gravity="center_vertical"
        android:text="3.50"
        android:textSize="@dimen/text_size"/>

    <ImageView
        android:id="@+id/cny"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_height"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/edge_margin"
        android:layout_toEndOf="@+id/cost"
        android:src="@drawable/cny"/>

    <CheckBox
        android:id="@+id/buy"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/cny"
        android:layout_marginStart="@dimen/text_height"
        android:gravity="center_vertical"/>

</RelativeLayout>