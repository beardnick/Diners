<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/looklike"
        android:drawablePadding="40dp"
        android:text="账号:######"
        android:textSize="25dp"
        android:textColor="#000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号:######"
        android:layout_gravity="center"
        android:textColor="#000"
        android:textSize="25dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="钱包"
        android:padding="20dp"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/red_packet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="红包"
        android:padding="20dp"
        android:textColor="#000"
        android:textSize="30dp"
        />

        <TextView
            android:id="@+id/gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="金币"
            android:padding="20dp"
            android:textSize="30dp"/>

    </LinearLayout>



    <TextView
        android:id="@+id/address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/address"
        android:text="收货地址"
        android:drawablePadding="10dp"
        android:padding="0dp"
        android:textColor="#000"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/my_collection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="我的收藏"
        android:drawablePadding="10dp"
        android:padding="-3dp"
        android:drawableStart="@drawable/mycollection"
        android:textColor="#000"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/recommend_prize"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="推荐有奖"
        android:drawablePadding="10dp"
        android:padding="-3dp"
        android:drawableStart="@drawable/recommendforprize"
        android:textColor="#000"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/shop_gold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="金币商城"
        android:drawablePadding="10dp"
        android:padding="-3dp"
        android:drawableStart="@drawable/shopforgold"
        android:textColor="#000"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/borrow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="我要借贷"
        android:drawablePadding="10dp"
        android:padding="-3dp"
        android:drawableStart="@drawable/borrow"
        android:textColor="#000"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/play_for_redpacket"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="玩游戏领红包"
        android:drawablePadding="10dp"
        android:padding="-3dp"
        android:drawableStart="@drawable/playforredpacket"
        android:textColor="#000"
        android:textSize="20dp"/>


</LinearLayout>

</LinearLayout>
